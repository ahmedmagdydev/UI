doctype html
html(dir="rtl")
	include assets/jade/head
	body
		include assets/jade/top-nav
		include assets/jade/side-bar
		article.store
			.top.clearfix
				.panel-page
					.panel-header: h2 الاعدادات
					.page-header لوريم ايبسوم
					.panel-body.settings
						.form-horizontal.flat
							.form-group
								label الاسم
								.control: input.form-control(type="text")
							.form-group
								label البريد الالكترونى
								.control: input.form-control(type="text")
							.form-group
								label رفع ملف
								.control: input.form-control(type="file")
							.form-group
								label لوريم ايبسوم
								.control.table-striped
									input(type="checkbox",id="check").check
									<label class='check' for='check'><i class="fa fa-check"></i></label>
							.form-group
								label مجهول
								span.radio
									input(type="radio", name="unkown", id="yes")
									label(for="yes") نعم
								span.radio
									input(type="radio", name="unkown", id="no")
									label(for="no") لا
							.form-group
								label مجهول
								.control
									select.select
										option option 
										option option 
							.form-control
								.button-group
									button(type="button").btn.btn-default حفظ
									button(type="button").btn.btn-default إلغاء
		include assets/jade/footer
