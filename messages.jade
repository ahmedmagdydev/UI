-var page = {link1:'رسالة جديدة' , link2: 'الرسائل'}
doctype html
html(dir="rtl")
	include assets/jade/head
	body
		include assets/jade/top-nav
		include assets/jade/side-bar
		article
			.top.clearfix
				.messages
					h2 الرسائل 
						span (55)
					table.table-striped
						thead
							tr
								th(width="5%")
									input(type="checkbox",id="check_all").check
									<label class='check' for='check_all'><i class="fa fa-check"></i></label>
								th(width="20%") المرسل
								th(width="40%") عنوان الرسالة
								th(width="20%") تاريخ الرسالة
								th(width="5%",align="center"): a.delete-icon(href="#")
						tbody
							-for(i=1;i<21;i++)
								tr
									td
										input(type="checkbox",id="check_#{i}").check
										<label class='check' for='check_#{i}'><i class="fa fa-check"></i></label>
									td
										img(src="img/commenter.jpg")
										a.sender(href="#") احمد مجدى
									td: a.messageTitle(href="#") المقال الصحفي المتوازي الثنائي
									td: a(href="#") 25 ابريل 2014
									td: a.delete-icon(href="#")
					.pagination
						button(type="button").btn: i.fa.fa-angle-down
					//- .pagination
						ul.clearfix
							li: a(href="#") السابق
							-for(i=1;i<8;i++)
								li: a(href="#")=i
							li: a(href="#") التالى
		include assets/jade/footer
