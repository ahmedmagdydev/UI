doctype html
html(dir="rtl")
	include assets/jade/head
	body.login
		header.clearfix
			.logo: img(src="img/logo.png")
			.new-user: a(href="register.html") تسجيل مستخدم جديد
		.main-content
			#login-form
				.form-group
					label.required اسم المستخدم
					input.form-control.user-name(type="text" required)
				.form-group
					label.required كلمة السر
					input.form-control.user-pass(type="password" required)
				.form-group
					.error اسم المستخدم او كلمة المرور التى ادخلتها غير صحيحة

				.form-group
					a.submit(href="index.html") دخول
				.inline-form.clearfix
					.form-group.checkbox.pull-right
						input(type="checkbox" id="remember")
						label(for="remember") تذكرنى
					.pull-left
						a(href="forgot-pass.html")  نسيت كلمة المرور 
			.links
				ul
					li: a(href="who-we-are.html") من نحن
					li: a(href="privacy.html") الخصوصية
					li: a(href="licence.html") الشروط والأحكام
		include assets/jade/footer




